{
  "name": "@skarab/eslint-config",
  "description": "My ESLint config",
  "version": "0.0.0-development",
  "author": {
    "name": "skarab42",
    "email": "contact@skarab42.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skarab42/eslint-config.git"
  },
  "homepage": "https://github.com/skarab42/eslint-config",
  "bugs": "https://github.com/skarab42/eslint-config/issues",
  "funding": "https://github.com/sponsors/skarab42",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "main": "./output/eslint-config/index.js",
  "types": "./output/eslint-config/index.d.ts",
  "exports": {
    ".": "./output/eslint-config/index.js",
    "./recommended": "./output/eslint-config/configs/recommended.js",
    "./configs": "./output/eslint-config/configs/index.js",
    "./configs/*": "./output/eslint-config/configs/*.js",
    "./configs/*.js": "./output/eslint-config/configs/*.js",
    "./overrides": "./output/eslint-config/overrides/index.js",
    "./overrides/*": "./output/eslint-config/overrides/*.js",
    "./overrides/*.js": "./output/eslint-config/overrides/*.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "eslint-staged": "./output/eslint-staged/index.js"
  },
  "files": [
    "output"
  ],
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "lint": "eslint **/* --max-warnings=0",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier **/* --ignore-unknown",
    "format:write": "pnpm format --write",
    "build": "rimraf ./output && tsc -p tsconfig.build.json",
    "semantic-release": "semantic-release --branches main",
    "eslint-staged": "node ./output/eslint-staged/index.js"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^50.0.1"
  },
  "devDependencies": {
    "@skarab/prettier-config": "^1.2.2",
    "@skarab/typescript-config": "^3.1.0",
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "eslint": ">=8",
    "typescript": ">=5"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.12.1",
  "keywords": [
    "eslint",
    "config",
    "typescript"
  ],
  "prettier": "@skarab/prettier-config",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm eslint-staged --fix --max-warnings=0",
      "pnpm prettier --write --ignore-unknown"
    ]
  }
}
