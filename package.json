{
  "name": "@skarab/eslint-config",
  "description": "My ESLint config",
  "version": "0.0.0-development",
  "author": {
    "name": "skarab42",
    "email": "contact@skarab42.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skarab42/eslint-config.git"
  },
  "homepage": "https://github.com/skarab42/eslint-config",
  "bugs": "https://github.com/skarab42/eslint-config/issues",
  "funding": "https://github.com/sponsors/skarab42",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "./output/index.js",
  "types": "./output/index.d.ts",
  "exports": {
    ".": "./output/index.js",
    "./configs": "./output/configs/index.js",
    "./configs/*": "./output/configs/*.js",
    "./configs/*.js": "./output/configs/*.js"
  },
  "files": [
    "output"
  ],
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "lint": "eslint **/* --cache --max-warnings=0",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier **/* --cache --ignore-unknown",
    "format:write": "pnpm format --write",
    "build": "rimraf ./output && tsc -p tsconfig.build.json",
    "semantic-release": "semantic-release --branches main"
  },
  "dependencies": {
    "@eslint/js": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "globals": "^13.24.0"
  },
  "devDependencies": {
    "@skarab/prettier-config": "^1.2.2",
    "@skarab/typescript-config": "^3.1.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "eslint": ">=8.23",
    "typescript": ">=5"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.12.1",
  "keywords": [
    "eslint",
    "config",
    "typescript"
  ]
}
