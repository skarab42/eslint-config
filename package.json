{
  "name": "@skarab/eslint-config",
  "description": "My ESLint config",
  "version": "0.0.0-development",
  "author": {
    "name": "skarab42",
    "email": "contact@skarab42.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skarab42/eslint-config.git"
  },
  "homepage": "https://github.com/skarab42/eslint-config",
  "bugs": "https://github.com/skarab42/eslint-config/issues",
  "funding": "https://github.com/sponsors/skarab42",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": ".eslintrc.json",
  "files": [
    "rc",
    ".eslintrc.json"
  ],
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier **/* --write --cache --ignore-unknown",
    "semantic-release": "semantic-release --branches main"
  },
  "prettier": "@skarab/prettier-config",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "eslint-plugin-unicorn": "^50.0.1"
  },
  "devDependencies": {
    "@skarab/prettier-config": "^1.2.2",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "semantic-release": "^22.0.12",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "eslint": ">=8",
    "typescript": ">=4"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@7.6.0",
  "keywords": [
    "eslint",
    "config",
    "eslint-config",
    "typescript",
    "hardcore"
  ]
